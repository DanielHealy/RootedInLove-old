@model RootedInLove.Models.Product

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Product</h4>
    <hr />
    <p>
        <img src="@Html.DisplayFor(modelItem => Model.Image)" class="img-responsive" style="text-align: center; margin-left: auto; margin-right: auto; max-height:400px" />
        <br />
        <h3>@Html.DisplayFor(modelItem => Model.Title)</h3>
        <br />
        @Html.DisplayFor(modelItem => Model.category.Name) by @Html.DisplayFor(modelItem => Model.Author.FullName)
        <br /><br />
        @Html.DisplayFor(modelItem => Model.Description)
       
    </p>
</div>
